<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rasmus.myhangman.MainActivity">


    <ImageView
        android:id="@+id/galge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/galge"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <ImageView
        android:id="@+id/mistake1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forkert1"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
    <ImageView
        android:id="@+id/mistake2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forkert2"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
    <ImageView
        android:id="@+id/mistake3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forkert3"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
    <ImageView
        android:id="@+id/mistake4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forkert4"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
    <ImageView
        android:id="@+id/mistake5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forkert5"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
    <ImageView
        android:id="@+id/mistake6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/forkert6"
        tools:layout_editor_absoluteY="37dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <GridView
        android:id="@+id/letters"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="#686868"

        android:horizontalSpacing="5dp"
        android:numColumns="6"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"

        app:layout_constraintTop_toBottomOf="@+id/word"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/galge"
        app:layout_constraintRight_toRightOf="@id/galge"
        app:layout_constraintTop_toBottomOf="@id/galge"
        android:orientation="horizontal" >
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
